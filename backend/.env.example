# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# CORS
CORS_ORIGIN=http://localhost:5173

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/emooti?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=debug
LOG_SERVICE=local
APP_NAME=emooti-backend

# Papertrail (if LOG_SERVICE=papertrail)
# PAPERTRAIL_HOST=logs7.papertrailapp.com
# PAPERTRAIL_PORT=12345

# Better Stack / Logtail (if LOG_SERVICE=betterstack)
# BETTERSTACK_SOURCE_TOKEN=your_token_here

# Sentry Configuration (APM & Error Tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1
# SENTRY_PROFILES_SAMPLE_RATE=0.1

# Storage Configuration
STORAGE_TYPE=local
# STORAGE_TYPE=s3  # Cambiar a 's3' para usar AWS S3

# AWS S3 Configuration (opcional - solo si STORAGE_TYPE=s3)
# AWS_REGION=eu-west-1
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_S3_BUCKET=emooti-uploads
# AWS_S3_UPLOADS_PREFIX=uploads/  # Prefijo para archivos de usuarios

# Database Backup Configuration (opcional - para backups automáticos)
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
# AWS_S3_BACKUPS_BUCKET=emooti-backups  # Bucket específico para backups (o usar el mismo con prefijos)

# Stripe (opcional - para más adelante)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Signaturit (opcional - para más adelante)
# SIGNATURIT_API_KEY=...

# Email Configuration (opcional - para más adelante)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
