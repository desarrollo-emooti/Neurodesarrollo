# EMOOTI Backend Production Environment Variables
# NO COMMITEAR ESTE ARCHIVO CON VALORES REALES

# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# CORS (URL de tu frontend en Vercel)
CORS_ORIGIN=https://tu-app.vercel.app
FRONTEND_URL=https://tu-app.vercel.app

# Database - Railway PostgreSQL
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Configuration - CAMBIAR EN PRODUCCIÓN
JWT_SECRET=CAMBIA-ESTO-POR-UN-VALOR-SUPER-SEGURO-Y-LARGO-EN-PRODUCCION
JWT_REFRESH_SECRET=CAMBIA-ESTO-POR-OTRO-VALOR-SUPER-SEGURO-Y-LARGO-EN-PRODUCCION
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://tu-api.railway.app/api/v1/auth/google/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_SERVICE=local
APP_NAME=emooti-backend

